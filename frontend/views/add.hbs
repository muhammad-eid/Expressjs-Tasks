<div class="mx-5">
    <form action="{{form.route}}" method="post"> 
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input name="name" type="text" class="form-control" id="name" value="{{form.name}}">
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{form.title}}">
    </div>
    <div class="mb-3">
        <label for="content" class="form-label">Content</label>
        <input name="content" type="text" class="form-control" id="content" value="{{form.content}}">
    </div>
    <button type="submit" class="btn btn-primary">{{form.btn}}</button>
    </form>
</div>

